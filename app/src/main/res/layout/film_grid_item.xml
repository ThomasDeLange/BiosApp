    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/filmThumbnailView1"
        android:layout_width="145dp"
        android:layout_height="166dp"
        app:srcCompat="@color/colorAccent"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="19dp" />

    <TextView
        android:id="@+id/filmTitleView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/filmThumbnailView1"
        app:layout_constraintStart_toStartOf="@+id/filmThumbnailView1"
        app:layout_constraintTop_toTopOf="@+id/filmThumbnailView1" />

</android.support.constraint.ConstraintLayout>